@page
@model MaquinasModel
@{
    ViewData["Title"] = "Máquinas";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Máquinas </title>
    <style>
        .container-repos {
            background: #CdCdCd;
            border: 1px solid #666;
            color: #000;
            width: 100%;
            height: auto;
        }
        .datos {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-around;
        }
        .maquinas {
            background: #F6A810;
            color: #ffffff;
            width: 140px;
            height: 50px;
            border-radius: 4px;
            border: transparent;
        }
        .titular {
            display: flex;
            flex-direction: row-reverse;
        }
    </style>
</head>
<body>
    <div class="titular"><button class="maquinas" type="submit">MÁQUINAS</button></div>
        <div class="container-repos">
            <div class="datos">
                <div>ID</div>
                <div>NOMBRE</div>
                <div>CHASIS</div>
                <div>ESTADO</div>
                <div>FECHA DE COMPRA</div>
                <div>PRECIO POR HORA</div>
            </div>
        </div>
</body>
</html>